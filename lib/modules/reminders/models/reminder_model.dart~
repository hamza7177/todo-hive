
import 'package:hive/hive.dart';

part 'reminder_model.g.dart';


@HiveType(typeId: 0)
class ReminderModel extends HiveObject {
  @HiveField(0)
  String id;

  @HiveField(1)
  String name;

  @HiveField(2)
  bool isInterval;

  @HiveField(3)
  DateTime? dateTime;

  @HiveField(4)
  List<bool> weekdays;

  @HiveField(5)
  String color;

  @HiveField(6)
  int intervalMinutes;

  ReminderModel({
    required this.id,
    required this.name,
    this.isInterval = false,
    this.dateTime,
    required this.weekdays,
    required this.color,
    this.intervalMinutes = 0,
  });
}
